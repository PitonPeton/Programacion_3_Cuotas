@*Strong Typed*@
@model PrestamoViewModel
@{
	ViewData["Title"] = "Home";
	var message = (string)ViewData["message"];
}

<style>
	input::-webkit-outer-spin-button,
	input::-webkit-inner-spin-button {
		-webkit-appearance: none;
		margin: 0;
	}

	input[type=number] {
		-moz-appearance: textfield;
	}
</style>

<div class="row">
	<h1 style="text-align:center;">Calculadora de cuotas.</h1>
</div>

<div class ="h-100 d-flex align-items-center justify-content-center">
	<form method="post" asp-controller="Cuota" asp-action="Index">
		<table class="table table-hover table-sm">
			<tbody class="table-group-divider">
				<tr>
					<th scope="row">
						<label asp-for="prestamo_cantidad" class="form-label">Monto de prestamo: </label>
					</th>
					<td>
						<div class="input-group mb-3">
							<div class="input-group-prepend">
								<span class="input-group-text">RD$</span>
							</div>
						<input asp-for="prestamo_cantidad" class="form-control" type="number" min="1" required="required"/>
						</div>
					</td>
				</tr>
				<tr>
					<th scope="row">
						<label asp-for="prestamo_tipo" class="form-label">Tipo de prestamo: </label>
					</th>
					<td>
						<select asp-for="prestamo_tipo" class="form-select" name="prestamo_tipo" required>
							<option value="Personal">Personal</option>
							<option value="Auto">Auto</option>
							<option value="Hipotecario">Hipotecario</option>
						</select>
					</td>
				</tr>
				<tr>
					<th scope="row">
						<label asp-for="couta" class="form-label">Cuotas mensuales: </label>
					</th>
					<td>
						<select asp-for="couta" class="form-select" required>
							<option value="12">12</option>
							<option value="18">18</option>
							<option value="24">24</option>
							<option value="30">30</option>
							<option value="36">36</option>
							<option value="42">42</option>
							<option value="48">48</option>
							<option value="54">54</option>
							<option value="60">60</option>
							<option value="66">66</option>
							<option value="72">72</option>
							<option value="78">78</option>
							<option value="84">84</option>
							<option value="90">90</option>
							<option value="96">96</option>
							<option value="102">102</option>
							<option value="108">108</option>
							<option value="114">114</option>
							<option value="120">120</option>
						</select>
					</td>
				</tr>
				<tr>
					<td colspan="3" style="text-align:center">
						<button type="submit" class="btn btn-info">Calcular</button>
					</td>
				</tr>
			</tbody>
		</table>
	</form>
</div>

@if (message != null)
{
	<h2 style="text-align:center;;">La cuota mensual equivale a: @message RD$</h2>
}